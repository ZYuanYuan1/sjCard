/* pages/address/address.wxss */
page{
    height: 100%;
}
.container{
    background-color:#f8f8f8;
    justify-content: initial;
}
.form-box{
    width:100%;
    background-color: #fff;
    margin-top: 30rpx;
}
.row-wrap{
    width: 720rpx;
    height: 100rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    border-bottom: 2rpx solid #D8D8D8;
    display: flex;
    font-size: 28rpx;
    /*justify-content: space-between;*/
}
.label{
    width: 100%;
    color: #888888;
    font-size: 20rpx;
    margin-top:20rpx;
    margin-left: 30rpx
}
.row-wrap .label-right{
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
}
.row-wrap .label-right input{
    height: 100%;
    font-size: 28rpx;
    padding-right: 30rpx;
}
.row-wrap .right-box{
    margin-right: 30rpx; 
}
.arrow-right{
    width: 15rpx;
    height: 24rpx;
}
.save-btn{
    width: 650rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    margin-top:60rpx; 
    border-radius: 8rpx;
     background-color: #F5BF00;
    color:#fff;
}
.addr-details{
    height: auto;
    padding: 30rpx 0;
    margin-left:30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
}
.addr-details textarea{
    box-sizing: border-box;
    width: 480rpx;
    overflow: scroll;
}
picker {
    min-width: 20rpx;
    height: 100%;
    margin-right: 20rpx;
    line-height: 40rpx;
    font-size: 28rpx

}
.hui{
    color: #777;
    line-height: 40rpx;
    font-size: 28rpx
}
.row-wrap checkbox{
  zoom: 60%;
  margin-left: 50rpx;
  font-size: 47rpx;
  color: #888888
}