view.whomember {
  font-size: 36rpx;
  letter-spacing: 1px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  margin-bottom: 20rpx;
}

.time {
  font-size: 32rpx;
  color: #999;
}

.rightbox {
  color: #f3362b;
  font-size: 36rpx;
}

/*底部按钮*/
.btnbox {
  position: fixed;
  bottom: 2%;
  width: 100%;

}

.btnbox button {
  width: 90%;
  background-color: #f5bf00;
  color: #fff;
  font-size: 38rpx;
  letter-spacing: 4rpx;
}

.page:after {
  content: "";
  display: block;
  clear: both;
  height: 150rpx;
  background-color: #fff;
}