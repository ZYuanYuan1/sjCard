/* pages/search/search.wxss */
.search-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  background-color:#f4f4f4;
}

.top-bar-container {
  display: flex;
  flex-direction:column; 
  position: fixed;
  background-color:#f4f4f4;
  height: 196rpx;
  width: 100%;
  z-index: 3;
}
.search-bar-container {
  display: flex;
  flex-direction: row;
  background-color: #ffffff;
  align-items: center;
  height:80rpx;
  width:100%;
}

.search-bar-sub-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  height:60rpx;
  width:100%;
  margin-left: 36rpx;
  margin-right: 36rpx;
  padding-left: 16rpx;
  padding-right: 16rpx;
  background-color: #EBECED;
  border-radius: 12rpx;
}
.search-bar-sub-container-image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}
.search-bar-sub-container-input {
  height: 60rpx;
  width:100%;
  font-size: 28rpx;
}

.location {
  display: flex;
  background-color: #ffffff;
  height: 76rpx;
  width: 100%;
  margin-top: 20rpx;
  align-items: center;
  justify-content: center; 
}

.location-image {
  height: 50rpx;
  width:50rpx;
  
}

.location-text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #4A4A4A;
  min-width: 224rpx;
  align-items: center;
  text-align: left;
}
.location-text2 {
  margin-left: 16rpx;
  font-size: 22rpx;
  color:gold;
  min-width: 224rpx;
  align-items: center;
  text-align: left;
}
.search-records {
  display: flex;
  flex-direction: column;
  width: 100%;
  bottom: 0rpx;
  height: 100%;
  margin-top: 192rpx;
  background-color: #ffffff;
}
.search-record-section-header {
  display:flex;
  font-size: 28rpx;
  color: #4A4A4A;
  width: 100%;
  padding-left: 30rpx;
  align-items: center;
  height: 76rpx;
}
.search-record-section-header-image {
  width: 30rpx;
  height: 30rpx;
}
.search-record-section-header-text {
  font-size: 28rpx;
  color: #4A4A4A;
  width: 100%;
  padding-left: 30rpx;
}
.search-record {
  display: flex;
  font-size: 28rpx;
  color: #4A4A4A;
  width: 100%;
  padding-left: 30rpx;
  align-items: center;
  height: 76rpx;
  border-top: solid #f4f4f4 1rpx
}
.address{
  width:80%;
}

.loca{
  width:40%;
}