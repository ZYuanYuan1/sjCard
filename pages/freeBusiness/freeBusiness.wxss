/* pages/freeBuesiness/freeBuesiness.wxss */
.f_b_container {
  position: relative;
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
}

.top_bg_image {
  width: 100%;
  height: 580rpx;
  align-items: center;
  flex-direction: column;
  z-index: 0;
}

.f_b_sub_container {
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  position: fixed;
  top: 0rpx;
}

.user {
  display: flex;
  width: 100%;
  height: 264rpx;
  margin-top: 52rpx;
  align-items: center;
  flex-direction: column;
  z-index: 1;
}

.user_avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
}

.user_name {
  width: 100%;
  margin-top:20rpx;
  height: 44rpx;
  font-size: 32rpx;
  text-align:center;
  color: #030303
}

.merchant {
  display: flex;
  margin-top:22rpx;
  width: 100%;
  height: 44rpx;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}

.merchant_avatar{
  width:30rpx;
  height:30rpx;
}

.merchant_name {
  height: 44rpx;
  margin-left: 14rpx;
  font-size: 32rpx;
  color: #030303;
}

.contract_container {
  display: flex;
  flex-direction: column;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-top: 46rpx;
  border-radius: 40rpx;
  height: 176rpx;
  background-color: #F8FAFE;
  box-shadow:0px 2px 8px 1px #F8FAFE;
}
.contract_title {
  display: flex;
  flex-grow: 1;
  font-size: 28rpx;
  color: #4A4A4A;
  width: 100%;
  border-bottom: solid #EFF2F4 1rpx;
  justify-content: center;
  align-items: center;
}

.contract_validity_period {
  display: flex;
  flex-grow: 1;
  width: 100%;
  font-size: 24rpx;
  color: #4A4A4A; 
  justify-content: center;
  align-items: center;
}

.deposit {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-top: 64rpx;
  border-radius: 40rpx;
  height: 176rpx;
  background-color: #F8FAFE;
  box-shadow:0px 2px 8px 1px #F8FAFE;
  font-size: 28rpx;
}

.deposit_title {
  margin-top: 32rpx;
  font-size: 28rpx;
  color: #4A4A4A;
  align-items: center;
  justify-content: center;
}

.payment_record {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 60rpx;
  margin-right: 60rpx;
  margin-top: 64rpx;
  margin-bottom: 100rpx;
  border-radius: 40rpx;
  height: 176rpx;
  background-color: #F8FAFE;
  box-shadow:0px 2px 8px 1px #F8FAFE;
  font-size: 28rpx;
}

.payment_title {
  font-size: 28rpx;
  color: #4A4A4A;
}