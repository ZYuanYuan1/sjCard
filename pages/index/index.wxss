/* pages/index/index.wxss */
.index_container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.content{
  padding:0
}
.search-bar {
  display: flex;
  position: fixed;
  flex-direction: row;
  background-color: #FFF985;
  align-items: center;
  justify-content: space-between;
  height:80rpx;
  width:100%;
  top:0rpx;
  z-index: 3;
}
.search-bar-loacation {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  margin-left: 30rpx;
  height:80rpx;
  align-items: center;
}

.search-bar-loacation-icon {
  width: 18rpx;
  height: 28rpx;
  /* background-color: red; */
}

.search-bar-loacation-text {
  font-size: 24rpx;
  padding-left: 16rpx;
  text-align: center;
  align-items: center;
  max-width: 200rpx;
  overflow:hidden;/*//超出一行文字自动隐藏 */
  text-overflow:ellipsis;/*//文字隐藏后添加省略号*/
  white-space:nowrap;/*//强制不换行*/
}
.search-bar-loacation-arrow {
  margin-left: 16rpx;
  width: 16rpx;
  height: 10rpx;
  /* background-color: red; */
}

.search-bar-input-container {
  display: flex;
  flex-grow: 1;
  background-color: #f9f7dc;
  margin-left: 16rpx;
  margin-right: 30rpx;
  height: 48rpx;
  border-radius: 40rpx;
}
.search-bar-input-sub-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f9f7dc;
  width: 100%;
  height: 48rpx;
  border-radius: 40rpx;
}
.search-bar-input-sub-container-icon {
  width: 32rpx;
  height: 32rpx;
  /* background-color:green; */
}
.search-bar-input-sub-container-text {
  margin-left: 16rpx;
  font-size:28rpx;
  width: 200rpx;
  height: 40rpx;
  color: #adadad;
}

._banner{
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.banner{
  width: 100%;
  margin-top: 90rpx;
  height: 262rpx;
  /* padding:10rpx; */
  
}

.banner-image {
  width:100%;
  /* padding:20rpx; */
  height:262rpx;
  border-radius:23rpx;
 
}


.notification {
  display: flex;
  align-items: center;
  width:100%;
  /* padding-left: 16rpx;
  padding-right: 16rpx; */
  margin-top: 12rpx;
  height:28rpx;
  /* background-color: #fc4255; */
}

.notification-image {
  width: 24rpx;
  height: 24rpx;
  padding-left: 16rpx;
}
.notification-text {
  margin-left: 16rpx;
  font-size: 20rpx;
  color: #7A7A7A;
}

.filter {
  display: flex;
  flex-direction: row;
  height: 70rpx;
  align-items: center;
  justify-content: space-between;
  margin-left: 16rpx;
  margin-right: 16rpx;
  border-bottom: solid #EEEEEE 0.5rpx;
  margin-top:10rpx;


}
.filter-border-left {
  border-left: solid #EEEEEE 0.5rpx
}

.filter-item {
  display: flex;
  flex-direction: row;
  flex-grow: 1;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #4A4A4A;
}

.filter-item-text {
  justify-content: center;
  text-align: center;
  font-size: 24rpx;
  color: #4A4A4A;
}

.filter-item-arrow {
  width: 8rpx;
  height: 6rpx;
  margin-left: 10rpx;
  /* background-color: #fc4255 */
}

.filter-drop-down-list {
  margin-top:23rpx;
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 480rpx;
  background-color: white
}

.filter-drop-down-list-item {
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  width: 100%;
  /* background-color: rebeccapurple; */
}

.filter-drop-down-list-item-text {

  margin-left: 50rpx;
  /* background-color: #FFF985; */
  color: #888888;
  font-size: 24rpx;
  text-align: center;
  widows: 200rpx;
  height: 40rpx;
}

.filter-drop-down-list-item-image {
  margin-right: 50rpx;
  height: 24rpx;
  width: 32rpx;
}
.index_sub_container{
  display: flex;
  position: relative;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding-bottom:10rpx;
  margin-top:-25rpx;
}

/*主体盒子*/
.mainbox{
  background-color:#f6f6f6;
  margin-top:26rpx;
}
.singlebox{
  padding:20rpx;
  display:flex;
  background-color:#fff;
  margin-bottom:2rpx;
  height:228rpx;
box-sizing:border-box;
}
view.mainimgbox{
  display: flex;
  align-items: center;
  height:200rpx;
  flex:0 0 190rpx;
  margin: 0 ;
}
view.mainimgbox image{
  width:160rpx;
  height:160rpx;
  border-radius: 4rpx;
}
view.textbigbox{
  margin-top: 11rpx;
  flex:1;
}
view.headline{
  font-size:32rpx;
overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:1;
-webkit-box-orient:vertical;
}
view.textdetail{
font-size:24rpx;
margin:0rpx 0rpx;
line-height:39rpx;
color:#adadad;
overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:2;
-webkit-box-orient:vertical;
-webkit-line-clamp:1;
}
.integralbox{
  font-size:24rpx;
  margin-top: 16rpx;
}
.integral{
 font-weight:bold;
  color:#fc4255;
}
.integral text{
  font-size:24rpx;
}
.distance{
  text-align: right;
  font-size: 20rpx;
  margin-left: 60rpx;
}
.wtiming{
  display: block;
   overflow: hidden;/*超出部分隐藏*/
   white-space: nowrap;/*不换行*/
   text-overflow:ellipsis;
   width:95%;
}
.filter-drop-down-list-trim{
display:flex;
justify-content:space-between;
flex-direction:row;
align-items:center;
height:93rpx;
width:100%;
}
.amount{
  display: table-cell;
  font-size: 14rpx;
  background: #000000;
  opacity: 0.5;
  position:absolute;
  width: 70rpx;
  height: 22rpx;
  color: white;
  margin-left: 90rpx;
  margin-top: 68rpx;
  border-radius: 4rpx;
  text-align: center;
  z-index: 0;
  vertical-align: middle
}
