/* pages/playGame/playGame.wxss */
page{
  min-height:100%;
background-color:#f6f6f6;
}
view.searchlayer{
  background-color:#FFF985;
  padding:10rpx 0 16rpx 0;
}
.inputbox {
height:72rpx;
width:85%;
position:relative;
background-color:#f7f5f1;
border-radius:36rpx;
margin:0 auto;
}
.seachicon {
width:36rpx;
height:36rpx;
position:absolute;
top:25%;
left:32%;
z-index:100;

}
input.searchbox {
  font-size:28rpx;
  height:100%;
  box-sizing:border-box;
  width:100%;
  /* text-align:center;  */
  padding-left:251rpx;
}
/*主体部分*/
.mainbiglayer{
  background-color:#f6f6f6;
  padding-top:24rpx;
}
.singlebigbox{
  background-color:#fff;
  padding:20rpx;
  margin-bottom:20rpx;
}
.detailImgbox{
  position:relative;
}
.singleimgbox{
  width:100%;
  height:375rpx;
  border-radius:10rpx;
}
.singleimgbox image{
  width:100%;
  height:100%;
  border-radius:20rpx;
}
.labelInt{
  position:absolute;
  bottom:10%;
  left:0%;
  padding:20rpx;
  background-color:#df2500;
  text-align:center;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  opacity: 0.8;
  color:#fff;
  font-size:30rpx;
}
.labelInt text{
  font-size:42rpx;
}
view.headmain{
  font-size:38rpx;
margin-top:16rpx;
overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:1;
-webkit-box-orient:vertical;
}
.introtext{
  margin:10rpx 0 20rpx;
font-size:32rpx;
color:#939393;
overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:1;
-webkit-box-orient:vertical;
}
.labeltext{
  border:1px solid #eade9d;
padding:4rpx 10rpx;
border-radius:20rpx;
color:#eade9d;
font-size:32rpx;
display:inline-block;
margin-right:10rpx;
}